<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3 ">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card" >
  <img src="<%= listing.image.url %>"
   class="card-img-top show-img" 
   alt="Listed Image">
  <div class="card-body">
    <p class="card-text"><b> <%= listing.title %></b></p><br>
    
        <strong>Description:</strong> <%= listing.description %> <br>
        <strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
        <strong>Location:</strong> <%= listing.location %> <br>
        <strong>Country:</strong> <%= listing.country %> <br>

    

  </div>
</div>
    
    
    </div>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 editBtn">Edit</a>
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-dark offset-5 ">Delete</button>

    </form>
    </div>
    <br>
    <br>

    

